[run]
branch = True
omit =
   tests/*
   transcriptors/*
   evaluations/test*
   conftest.py
   debug/*
   debug*.py
   scripts/random_split_rwc.py


[report]
exclude_lines =
    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:

precision = 2
show_missing = True
skip_empty = true